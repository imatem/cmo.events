<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="cmo.events">
<body>

<!-- This view is in plone.app.dexterity.browser.container.pt -->
<metal:main fill-slot="content-core">
<metal:content-core define-macro="content-core">
  <tal:block repeat="widget view/widgets/values">
      <tal:block tal:condition="python:widget.__name__ not in ('IBasic.title', 'IBasic.description', 'title', 'description',)">
          <tal:widget tal:replace="structure widget/@@ploneform-render-widget"/>
      </tal:block>
  </tal:block>

  <fieldset tal:repeat="group view/groups"
            tal:attributes="id python:''.join((group.prefix, 'groups.', group.__name__)).replace('.', '-')">
      <legend tal:content="group/label" />
      <tal:block tal:repeat="widget group/widgets/values">
          <tal:widget tal:replace="structure widget/@@ploneform-render-widget"/>
      </tal:block>
  </fieldset>
  
  <fieldset id="folder-listing">
      <legend i18n:translate="">Participants</legend>
      <table class="listing">
        <thead>
          <tr>
            <th>Title</th>
            <th i18n:translate="label_cmo_firstname">Firstname</th>
            <th i18n:translate="label_cmo_firstname">Lastname</th>
          </tr>
        </thead>
        <tbody tal:define="items nocall:context/folder_listing/batch">
        <!-- plone.app.contenttypes.browser.templates.listing.pt -->
          <tr tal:repeat="item items">
            <tal:block tal:define="obj item/getObject">
              <td>
                <a href="" tal:attributes="href item/getURL">
                  <span tal:content="item/Title"/>
                </a>
              </td>
              <td tal:content="obj/firstname"/>
              <td tal:content="obj/lastname"/>
            </tal:block>
        </tr>
        </tbody>
      </table>
  </fieldset>

</metal:content-core>
</metal:main>

</body>
</html>
