<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  metal:use-macro="context/main_template/macros/master"
  i18n:domain="cmo.events">
  <head>
    <metal:css fill-slot="style_slot" tal:define="resources_url string:${context/portal_url}/++resource++wcfc">
      <link href="++resource++wcfc/bootstrap/bootstrap-fixed.css" tal:attributes="href string:${resources_url}/bootstrap/bootstrap-fixed.css" rel="stylesheet" type="text/css"/>
      <style type="text/css">
        a.button {
        -webkit-appearance: button;
        -moz-appearance: button;
        color: #4d4d4d;
        background-color: #e5e5e5;
        border-color: #b2b2b2;

        display: inline-block;
        margin-bottom: 0;
        font-weight: 700;
        text-align: center;
        text-shadow: 0 1px rgba(0, 0, 0, 0.25);
        vertical-align: middle;
        cursor: pointer;
        background-image: none;
        border: 1px solid transparent;
        white-space: nowrap;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        border-radius: 2px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none; 
      }
      </style>
    </metal:css>

    <metal:block fill-slot="top_slot"
      tal:define="dummy python:request.set('disable_border',1);
                disable_column_one python:request.set('disable_plone.leftcolumn',1);
                disable_column_two python:request.set('disable_plone.rightcolumn',1);"
    />
    <metal:js fill-slot="javascript_head_slot" tal:define="resources_url string:${context/portal_url}/++resource++wcfc">
      <script type="text/javascript" src="++resource++wcfc/bootstrap/bootstrap.min.js"
                tal:attributes="src string:${resources_url}/bootstrap/bootstrap.min.js">
      </script>
    </metal:js>
  </head>
  <body>
    <div id="content-core" metal:fill-slot="main">
      <div class="fc" tal:define="participants view/participants">

        <table class="listing" tal:define="contentInformation view/tableContentInformation">
            <thead>
              <tr>
                <th tal:repeat="header python:contentInformation.keys()">
                  <span tal:content="header" i18n:translate=""/>
                </th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td tal:repeat="value python:contentInformation.values()">
                  <span tal:content="value"/>
                </td>
              </tr>
            </tbody>
        </table>


        <form method="POST">
          <!-- <a href="certificates" class="button">Return to Worhshop</a> -->
          <input class="btn btn-small searchPage searchButton allowMultiSubmit"
                type="submit"
                name="getcertificates"
                value="Get Certificate(s)"
          />

          <input class="btn btn-small"
                type="submit"
                name="getbadges"
                value="Get Badge(s)"
          />

          <input class="btn btn-small"
                type="submit"
                name="email_option"
                value="Send email"
          />
          <hr/>



        <tal:block tal:condition="participants">
          <h2> Participants Confirmed </h2>
          <table class="listing">
            <thead>
              <tr>
                <th></th>
                <th>Number</th>
                <tal:block tal:repeat="header python:participants['headers'][1:4]">
                  <th i18n:translate="" tal:content="header"/>
                </tal:block>
              </tr>
            </thead>
            <tbody>
              <tr tal:repeat="row participants/rows">
                <td>
                    <input type="checkbox" name="certificatebox" tal:attributes="value python:row[0]">
                </td>
                <td tal:content="repeat/row/number">number</td>
                <tal:block tal:repeat="column python:row[3:6]">
                  <td tal:content="column"/>
                </tal:block>
              </tr>
            </tbody>
          </table>

        </tal:block>
        </form>
      </div><!-- End fc -->
    </div>
  </body>
</html>