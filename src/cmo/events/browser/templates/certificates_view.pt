<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  metal:use-macro="context/main_template/macros/master"
  i18n:domain="cmo.events">
  <head>
    <metal:css fill-slot="style_slot" tal:define="resources_url string:${context/portal_url}/++resource++wcfc">
      <link href="++resource++wcfc/bootstrap/bootstrap-fixed.css" tal:attributes="href string:${resources_url}/bootstrap/bootstrap-fixed.css" rel="stylesheet" type="text/css"/>
    </metal:css>

    <metal:block fill-slot="top_slot"
      tal:define="dummy python:request.set('disable_border',1);
                disable_column_one python:request.set('disable_plone.leftcolumn',1);
                disable_column_two python:request.set('disable_plone.rightcolumn',1);"
    />
    <metal:js fill-slot="javascript_head_slot" tal:define="resources_url string:${context/portal_url}/++resource++wcfc">
      <script type="text/javascript" src="++resource++wcfc/bootstrap/bootstrap.min.js"
                tal:attributes="src string:${resources_url}/bootstrap/bootstrap.min.js">
      </script>
    </metal:js>
  </head>
  <body>
    <div id="content-core" metal:fill-slot="main">
      <div class="fc" tal:define="participants view/participants">
        <form
              method="POST">
            <input class="btn btn-small searchPage searchButton allowMultiSubmit"
                  type="submit"
                  value="Get Selected"
            />

          <hr/>
        <tal:block tal:condition="participants">
          <table class="listing">
            <thead>
              <tr>
                <th></th>
                <th>Number</th>
                <tal:block tal:repeat="header python:participants['headers'][:4]">
                  <th i18n:translate="" tal:content="header"/>
                </tal:block>
              </tr>
            </thead>
            <tbody>
              <tr tal:repeat="row participants/rows">
                <td>
                    <input type="checkbox" name="certificatebox" tal:attributes="value python:row[0]">
                </td>
                <td tal:content="repeat/row/number">number</td>
                <tal:block tal:repeat="column python:row[2:6]">
                  <td tal:content="column"/>
                </tal:block>
              </tr>
            </tbody>
          </table>

        </tal:block>
        </form>
      </div><!-- End fc -->
    </div>
  </body>
</html>